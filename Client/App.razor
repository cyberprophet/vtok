<CascadingAuthenticationState>

    <Router AppAssembly="@typeof(App).Assembly">

        <Found Context="routeData">

            <AuthorizeRouteView RouteData="@routeData" DefaultLayout="@typeof(CoreLayout)">

                <NotAuthorized>

                    @if (context.User.Identity?.IsAuthenticated is false)
                    {
                        <RedirectToLogin />
                    }
                    else
                    {
                        <iframe src="https://sharecompany.tistory.com/46" class="frame" allowfullscreen />
                    }
                </NotAuthorized>

            </AuthorizeRouteView>

            <FocusOnNavigate RouteData="@routeData" Selector="h1" />

        </Found>

        <NotFound>

            <PageTitle>ShareInvest</PageTitle>

            <LayoutView Layout="@typeof(CoreLayout)">
                <iframe src="https://sharecompany.tistory.com/46" class="frame" allowfullscreen />
            </LayoutView>

        </NotFound>

    </Router>

</CascadingAuthenticationState>